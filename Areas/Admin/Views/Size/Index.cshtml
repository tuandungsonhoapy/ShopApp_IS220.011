@model IEnumerable<App.DBModels.SIZE>

@{
    ViewData["Title"] = "Index";
    int i = 0;
}

<h1>Quản lý size</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(++i)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MASIZE">
                     <i class="fa-solid fa-pen-to-square fa-solid_icon" style="color: #12f33f; font-size: 24px;"></i>
                </a> 
                <a asp-action="Delete" asp-route-id="@item.MASIZE">
                      <i class="fa-solid fa-eraser fa-solid_icon" style="color: red;font-size: 24px;"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
