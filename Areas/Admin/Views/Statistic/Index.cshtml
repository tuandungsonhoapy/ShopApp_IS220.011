                    strHtml += "<td>" + moment(strDate).format('MMMM') + "</td>";
                    strHtml += "<td>" + moment(strDate).format('YYYY') + "</td>";
                    strHtml += "<td>" + item.price + "</td>";
                    strHtml += "</tr>";
                } else {
                    strDate = moment(item.date.date).format('DD MMMM YYYY');
                    console.log(strDate);
                    strHtml += "<tr>";
                    strHtml += "<td>" + (i + 1) + "</td>";
                    strHtml += "<td>" + "-" + "</td>";
                    strHtml += "<td>" + "-" + "</td>";
                    strHtml += "<td>" + moment(strDate).format('YYYY') + "</td>";
                    strHtml += "<td>" + item.price + "</td>";
                    strHtml += "</tr>";
                }

            });
            $('#load_data').html(strHtml);
        }

        @* window.onload = performTask; *@

        var submitButton = document.getElementById("submitButton");
        submitButton.onclick = performTask;
    </script>
}