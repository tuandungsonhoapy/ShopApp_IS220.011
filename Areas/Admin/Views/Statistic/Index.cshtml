@section css {
    <link rel="stylesheet" href="/css/Statistic.css">
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h2>Thống kê</h2>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="form-group col-sm-4">
            <label class="control-label"> Từ ngày: </label>
            <input id="fromDate" class="form-control" type="datetime-local" />
            <span class="text-danger"></span>
        </div>

        <div class="form-group col-sm-4">
            <label class="control-label">Đến ngày: </label>
            <input id="toDate" class="form-control" type="datetime-local" />
            <span class="text-danger"></span>
        </div>
        <div class="form-group select_option col-sm-4">
            <label class="control-label">Thống kê theo: </label>
            <select id="mySelect">
                <option value="1">Ngày</option>
                <option value="2">Tháng</option>
                <option value="3">Năm</option>
            </select>
        </div>
    </div>
    <div class="btn_statistic"><button class="btn btn-primary" id="submitButton">Thống kê</button></div>
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thống kê danh thu</h3>

