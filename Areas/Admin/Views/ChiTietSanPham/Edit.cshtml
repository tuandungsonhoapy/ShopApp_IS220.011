@model App.DBModels.CHITIETSANPHAM

@{
    ViewData["Title"] = "Edit";
}

@section css {
    <style>
        .form-control {
            width: 300px;
        }

        h4 {
            text-align: center;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
    </style>
}

<h4>Cập nhật thông tin mẫu sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MACTSP" />
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="MASP" class="control-label"></label>
                    <select asp-for="MASP" class="form-control" asp-items="ViewBag.MASP"></select>
                    <span asp-validation-for="MASP" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="MAMAU" class="control-label"></label>
                    <select asp-for="MAMAU" class="form-control" asp-items="ViewBag.MAMAU"></select>
                    <span asp-validation-for="MAMAU" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="MASIZE" class="control-label"></label>
                    <select asp-for="MASIZE" class="form-control" asp-items="ViewBag.MASIZE"></select>
                    <span asp-validation-for="MASIZE" class="text-danger"></span>
                </div>

                <div class="form-group col-sm-6">
                    <label asp-for="SOLUONG" class="control-label"></label>
                    <input asp-for="SOLUONG" class="form-control" />
                    <span asp-validation-for="SOLUONG" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu thông tin" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CreateSample" asp-controller="SanPham" asp-route-id="@ViewBag.ProductID"><i class="fa-solid fa-backward"></i> Quay lại</a>
</div>
