@model IEnumerable<App.DBModels.SANPHAM>

@{
    ViewData["Title"] = "Index";
    int currentpage = Convert.ToInt32(ViewData["currentpage_product"]);
    int pagesize = Convert.ToInt32(ViewData["pagesize_product"]);
    int i = (currentpage - 1) * pagesize;

}

<h1>Quản lý sản phẩm</h1>
<form asp-action="Index" method="get" id="searchForm">
    <label for="SearchString">Tìm kiếm sản phẩm:</label>
    <input type="search" name="SearchString" id="searchInput">
    <input type="submit" value="Tìm kiếm" class="btn btn-primary">
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới sản phẩm</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.TENSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PL_SP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GIABAN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PLTHOITRANG)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(++i)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.TENSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PL_SP.TENPL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GIABAN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PLTHOITRANG)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MASP">Cập nhật</a> |
                    <a asp-action="Details" asp-route-id="@item.MASP">Xem</a> |
                    <a asp-action="Delete" asp-route-id="@item.MASP">Xóa</a> |
                    <a asp-action="CreateSample" asp-route-id="@item.MASP">Thêm mẫu sản phẩm</a> |
                    <a asp-action="CreateImg" asp-route-id="@item.MASP">Thêm hình ảnh</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_PagingXTL" model="@ViewBag.pagingmodel" />
