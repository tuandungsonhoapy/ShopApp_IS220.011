@using CK_Model;
@using DB_CK;
@model List<CT_CB>
@{
    var ChuyenBay = ViewBag.CHUYENBAY as CHUYENBAY;
}

<input type="text" name="" id="" value="@ChuyenBay.CHUYEN">
<input type="text" name="" id="" value="@ChuyenBay.NGAY">
<input type="text" name="" id="" value="@ChuyenBay.DDI">
<input type="text" name="" id="" value="@ChuyenBay.GBAY">
<input type="text" value="@ChuyenBay.DDEN">
<input type="text" value="@ChuyenBay.GDEN">
<div>Chỗ VIP         @ViewBag.VIP/@ChuyenBay.VIP</div> 
<div>Chỗ Thường         @ViewBag.THUONG/@ChuyenBay.THUONG</div>
<a asp-action="AddHK" asp-controller="CT_CB" asp-route-MACH="@ChuyenBay.MACH" class="btn btn-primary">Thêm hành khách</a>
<table>
    <thead>
        <tr>
            <th>Họ tên hành khách</th>
            <th>Điện thoại</th>
            <th>Loại ghế</th>
            <th>Số ghế</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @{
            if(Model != null){
                foreach(var item in Model){
                    <tr>
                        <td>@item.HANHKHACH.HOTEN</td>
                        <td>@item.HANHKHACH.DIENTHOAI</td>
                        <td>@(item.LOAIGHE==true ? "VIP" : "Thường")</td>
                        <td>@item.SOGHE</td>
                        <td><a asp-action="DeleteHK" asp-controller="CT_CB" asp-route-MAHK="@item.MAHK" asp-route-MACH="@ChuyenBay.MACH">Xóa</a>
                        <a asp-action="ShowUpdateHK" asp-controller="CT_CB" asp-route-MAHK="@item.MAHK" asp-route-MACH="@ChuyenBay.MACH">Sửa</a></td>
                    </tr>
                }
            }
        }
    </tbody>
</table>